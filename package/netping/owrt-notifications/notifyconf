
config globals 'globals'
	list event 'temperature.Температура'
	list event 'humidity.Влажность'
	list event 'userlogin.Вход пользователя'
	list event 'userlogout.Выход пользователя'
	list event 'configchanged.Конфигурация изменена'
	list event 'operation.Операция'
	list event 'error.Ошибка'
	list event 'statechanged.Состояние изменено'
	list method 'email.Почта'
	list method 'syslog.Журнал'
	list method 'snmptrap.Отправить snmp сообщение'
	list method 'sms.Сообщение SMS'
	list method 'webhook.Вебхук уведомление'

config notify 'prototype'
	option name 'Уведомление'
	option state '0'
	option event 'temperature'
	option expression '-'
	option method 'email'
	option text 'Текст уведомления'
	option sendto 'Адрес'
	list timetable 'dw1,dw2,dw3,dw4,dw5,dw6,dw7 0:00:00-23:59:59'

config notify
	option name 'Изменение состояния IO'
	option event 'statechanged'
	option method 'email'
	option state '0'
	option expression '(%_source_%="owrt_digital_inputs" OR %_source_%="owrt-digital-outs") AND (%_id_% in {1,2,3,4})'
	option sendto 'Адрес'
	option subject 'Netping message'
	option signature 'Netping'
	option text '%_name_% изменил состояние на %_value_%'
	list timetable 'dw1,dw2,dw3,dw4,dw5,dw6,dw7 00:00:00-23:59:59'

config notify
	option name 'Изменение состояния реле'
	option event 'statechanged'
	option method 'email'
	option state '0'
	option expression '(%_source_%="owrt-digital-outs") and (%_id_% in {5,6})'
	option sendto 'Адрес'
	option subject 'Netping message'
	option signature 'Netping'
	option text 'Реле %_name_% изменило состояние на %_value_%'
	list timetable 'dw1,dw2,dw3,dw4,dw5,dw6,dw7 00:00:00-23:59:59'

